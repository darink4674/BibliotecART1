<Page x:Class="BibliotecART.Pages.ReaderMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Меню читателя">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Добро пожаловать!" FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Мои книги" Click="MyBooks_Click" Margin="0,0,0,10" Height="30"/>
            <Button Content="Поиск книг" Click="SearchBooks_Click" Margin="0,0,0,10" Height="30"/>
            <Button Content="Выйти" Click="Logout_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Page>