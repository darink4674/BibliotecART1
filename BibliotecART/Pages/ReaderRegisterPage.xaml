<Page x:Class="BibliotecART.Pages.ReaderRegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация читателя">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Регистрация нового читателя" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Имя:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="FirstNameBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Фамилия:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="LastNameBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Телефон:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="PhoneBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Email:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="EmailBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Адрес:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="AddressBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Пароль:" Width="120" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Подтвердите пароль:" Width="120" VerticalAlignment="Center"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Width="200"/>
            </StackPanel>

            <Button Content="Зарегистрироваться" Click="Register_Click" Width="150" Margin="0,20,0,10"/>
            <Button Content="Назад" Click="Back_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Page>