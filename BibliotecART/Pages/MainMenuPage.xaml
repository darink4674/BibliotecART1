<Page x:Class="BibliotecART.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главное меню">
    <Grid Background="{StaticResource DarkGreenBrush}">
        <Border Background="White" CornerRadius="10" Padding="30"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Width="300">
                <TextBlock Text="Библиотечная система" 
                           FontSize="24" HorizontalAlignment="Center" 
                           Margin="0,0,0,30" Foreground="{StaticResource DarkGreenBrush}"
                           FontWeight="Bold"/>

                <Button Content="Просмотр книг по отделам" 
                        Click="ViewByDepartments_Click" Height="40" FontSize="14"/>
                <Button Content="Поиск книг" 
                        Click="SearchBooks_Click" Height="40" FontSize="14"/>
                <Button Content="Оформление выдачи книг" 
                        Click="IssueBooks_Click" Height="40" FontSize="14"/>
                <Button Content="Управление выдачами" 
                        Click="ManageLoansButton_Click" Height="40" FontSize="14"/>
                <Button Content="Активные выдачи" 
                        Click="ActiveLoansButton_Click" Height="40" FontSize="14"/>

                <!-- Новая кнопка "Назад" -->
                <Button Content="Назад" 
                        Click="BackButton_Click" 
                        Height="40" 
                        FontSize="14"
                        Margin="0,20,0,0"
              
                        Foreground="Black"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
